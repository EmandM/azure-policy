{
  "properties": {
    "displayName": "[Preview]  [PSP]: Ensure Kubernetes Cluster is using given App Armor Profiles",
    "policyType": "BuiltIn",
    "mode": "Microsoft.Kubernetes.Data",
    "description": "This policy ensures containers are only using allowed App Armor profiles. For instructions on using this policy, please go to https://aka.ms/kubepolicydoc.",
    "metadata": {
      "version": "2.0.0-preview",
      "category": "Kubernetes",
      "preview": true
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "enforceOPAConstraint",
        "allowedValues": [
          "enforceOPAConstraint",
          "disabled"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        }
      },
      "excludedNamespaces": {
        "type": "Array",
        "metadata": {
          "displayName": "Namespace exclusions",
          "description": "List of Kubernetes namespaces to exclude from policy evaluation. Providing a value for this parameter is optional."
        },
        "defaultValue": []
      },
      "allowedProfiles": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed profiles",
          "description": "List of App Armor profiles that are valid for containers to use. Example: runtime/default."
        },
        "defaultValue": []
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "in": [
          "AKS Engine",
          "Microsoft.Kubernetes/connectedClusters"
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "constraintTemplate": "https://raw.githubusercontent.com/EmandM/azure-policy/feature/deny-apparmor/built-in-references/Kubernetes/enforce-apparmor-profile/template.yaml",
          "constraint": "https://raw.githubusercontent.com/EmandM/azure-policy/feature/deny-apparmor/built-in-references/Kubernetes/enforce-apparmor-profile/constraint.yaml",
          "values": {
            "excludedNamespaces": "[parameters('excludedNamespaces')]"
          }
        }
      }
    }
  }
}